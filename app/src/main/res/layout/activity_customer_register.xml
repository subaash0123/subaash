<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17B169"
    tools:context=".Customer_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cus_reg_login_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"

                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/cus_reg_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#17B169"

                android:text="register"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="customer name"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="door"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_doorno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="street"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="village"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="city"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="district"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="pincode"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="upi"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_upi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="mail"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/cus_reg_ccp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:ccp_textColor="#000"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="phone"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_cus_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="invisible"
                android:id="@+id/cus_reg_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17B169"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ProgressBar
                        android:id="@+id/cus_reg_otp_progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="#000"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/cus_reg_states"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sending OTP.."
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:visibility="invisible"
                        android:layout_marginLeft="20sp" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cus_reg_vis"
                    android:visibility="invisible"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="OTP"
                    android:textColorHint="#000"
                    app:boxStrokeColor="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:hintTextColor="#000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="#000">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cus_reg_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="2dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/cus_reg_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:elevation="5dp"

                    android:text="next"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:visibility="invisible"
                    android:id="@+id/cus_reg_ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:elevation="5dp"

                    android:text="verify"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:visibility="invisible"
                    android:id="@+id/cus_reg_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:elevation="5dp"

                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>




</ScrollView>